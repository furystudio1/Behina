<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custome="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rl2"
    app:ignore="NamespaceTypo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/e1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="25dp"
        android:id="@+id/im1"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl3"
        android:background="@drawable/card2"
        android:layout_below="@id/im1"
        android:layout_marginLeft="50dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ورود"
    android:textSize="30sp"
    android:layout_centerInParent="true"
    android:layout_alignParentTop="true"
    android:textColor="@color/black"
    android:gravity="center"
    android:id="@+id/tx1"/>

        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#FF03DAC5"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:layout_below="@id/tx1"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="80dp"
            android:layout_centerInParent="true"
            android:id="@+id/et1"
            android:padding="16dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/alert1"
                android:hint="نام کاربری"
                android:id="@+id/et11"/>

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#FF03DAC5"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:layout_below="@id/et1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:id="@+id/et2"
            android:padding="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="رمز عبور"
                android:textColorHint="@color/alert1"
                android:id="@+id/et22"/>

        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:borderColor="#FF03DAC5"
            app:borderWidth="2dp"
            app:cornerRadius="8dp"
            android:layout_below="@id/et2"
            android:layout_marginLeft="80dp"
            android:layout_centerInParent="true"
            android:id="@+id/et3"
            android:padding="16dp">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="نام بازار"
                android:textColorHint="@color/alert1"
                android:id="@+id/et33"/>


        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll2"
            android:layout_below="@id/et3"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="ورود پرسنل"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_below="@id/et2"
                android:background="@drawable/sixth_b"
                android:id="@+id/tx2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/seventh_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="ورود مدیر"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_below="@id/et2"
                android:id="@+id/tx3"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>